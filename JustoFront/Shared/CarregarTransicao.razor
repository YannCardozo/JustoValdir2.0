    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">@Mensagem</span>
    </div>
</div>

<style>
    .spinner-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 255, 255, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1050;
    }

    .loading-state {
        text-align: center;
        min-height: 100vh;
        align-content: center;
    }
</style>


@code
{
    [Parameter]
