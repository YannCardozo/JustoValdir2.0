@inject NavigationManager navigate


@if(Redireciona)
{
    Aguarda();

}

<span class="loading-message">@Mensagem</span>
<div class="spinner-overlay">
    <div class="spinner-border text-primary" role="status"></div>
</div>

<style>
    .spinner-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 255, 255, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1050;
    }

    .loading-state {
        text-align: center;
        min-height: 100vh;
        align-content: center;
    }

    .loading-message {
        position: fixed;
        top: 45%;
        transform: translateY(-50%);
        font-size: 1.5rem;
        color: #333;
        z-index: 1060; /* Ensure the message is above the spinner */
        text-align: center;
        width: 100%;
    }
</style>

@code {
    [Parameter]
    public string Mensagem { get; set; } = "";

    [Parameter]
    public bool Redireciona { get; set; } = false;




    public async Task Aguarda()
    {
        Task.Delay(2000);
        navigate.NavigateTo("");
    }

}