@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        @if (context.User.Identity != null && context.User.Identity.IsAuthenticated)
        {
            <p>Olá, @context.User.Identity.Name (@context.User.FindFirst("email")?.Value)!</p>
            <a href="Logout" class="nav-link btn btn-link">Log out</a>
        }
    </Authorized>
    <NotAuthorized>
        <a href="Register" class="nav-link btn btn-link">Registro</a>
        <a href="Login" class="nav-link btn btn-link">Login</a>
    </NotAuthorized>
</AuthorizeView>
