@if (ModalVisivel)
{
    <div class="modal show" tabindex="-1" role="dialog" style="display:block">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Editar Usuário: @UsuarioModal.Email</h5>
                    <button type="button" class="close" aria-label="Close" @onclick="CloseModal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @if (UsuarioModal != null)
                    {
                        <EditForm Model="UsuarioModal">
                            <DataAnnotationsValidator />
                            <div class="row g-3 align-items-center">
                                <div class="col-auto">
                                    <label for="inputPassword6" class="col-form-label">Usuário:</label>
                                </div>
                                <div class="col-auto">
                                    <InputText class="form-control" @bind-Value="UsuarioModal.UserName" />
                                    <ValidationMessage For="@(() => UsuarioModal.UserName)" />
                                </div>
                            </div>
                            <div class="row g-3 align-items-center mt-1">
                                <div class="col-auto">
                                    <label for="Email" class="col-form-label">Email:</label>
                                </div>
                                <div class="col-auto">
                                    <InputText class="form-control" @bind-Value="UsuarioModal.Email" />
                                    <ValidationMessage For="@(() => UsuarioModal.Email)" />
                                </div>
                            </div>
                            <div class="row g-3 align-items-center mt-1">
                                <div class="col-auto">
                                    <label for="Cpf" class="col-form-label">CPF:</label>
                                </div>
                                <div class="col-auto">
                                    <InputText class="form-control" @bind-Value="UsuarioModal.CPF" />
                                    <ValidationMessage For="@(() => UsuarioModal.CPF)" />
                                </div>
                            </div>
                            <div class="row g-3 align-items-center mt-1">
                                <div class="col-auto">
                                    <label for="Password" class="col-form-label">Senha:</label>
                                </div>
                                <div class="col-auto">
                                    <InputText type="password" class="form-control" @bind-Value="UsuarioModal.Password" id="password" />
                                    <ValidationMessage For="@(() => UsuarioModal.Password)" />
                                </div>
                            </div>
                            <div class="row g-3 align-items-center mt-1">
                                <div class="col-auto">
                                    <label for="Perfis" class="col-form-label">Perfis:</label>
                                </div>
                                <div class="col-auto">
                                    <InputSelect class="form-control" @bind-Value="UsuarioModal.RoleSelecionado">
                                        <option disabled selected value="">Selecione um perfil</option>
                                        @foreach (var role in Roles)
                                        {
                                            <option value="@role">@role</option>
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="@(() => UsuarioModal.RoleSelecionado)" />
                                </div>
                            </div>
                        </EditForm>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="SalvarModal">Salvar</button>
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
}
